# Neuromorphe Traum-Engine v2.0 - Environment Configuration
# Copy this file to .env and adjust the values as needed

# Backend Configuration
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_RELOAD=true

# Directory Paths (relative to project root)
AUDIO_DIR=./data/audio
EMBEDDINGS_DIR=./data/embeddings
DATABASE_PATH=./data/database/audio_files.db

# CLAP Model Configuration
CLAP_MODEL_VERSION=630k-audioset-best
CLAP_DEVICE=auto  # auto, cpu, cuda
CLAP_CACHE_DIR=./cache/clap

# Upload Configuration
MAX_FILE_SIZE_MB=100
ALLOWED_EXTENSIONS=wav,mp3,flac,ogg,m4a
MAX_CONCURRENT_UPLOADS=5

# Search Configuration
DEFAULT_SEARCH_LIMIT=50
MAX_SEARCH_LIMIT=500
DEFAULT_SIMILARITY_THRESHOLD=0.7
ENABLE_FUZZY_SEARCH=true
SEARCH_CACHE_SIZE=1000

# Database Configuration
DB_POOL_SIZE=10
DB_TIMEOUT=30
ENABLE_WAL_MODE=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log
ENABLE_FILE_LOGGING=true

# Performance Configuration
WORKER_THREADS=4
ENABLE_ASYNC_PROCESSING=true
BATCH_SIZE=10
CACHE_TTL=3600

# Security Configuration
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# Development Configuration
DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
STREAMLIT_THEME=light

# Optional: External Services
# REDIS_URL=redis://localhost:6379/0
# ELASTICSEARCH_URL=http://localhost:9200
# MONITORING_ENDPOINT=http://localhost:9090